{
    "simulation_setup": {
        "N_cells": 200,
        "domain_length": 1.0,
        "t_final": 0.2,
        "CFL": 0.5,
        "problem_type": "sod_shock_tube"
    },
    "numerical_schemes": {
        "spatial_scheme": "linear", 
        "time_integrator": "ssprk2",
        "riemann_solver": "hllc",
        "hllc_wave_speeds": "roe_einfeldt" 
    },
    "boundary_conditions": {
        "left_bc_type": "transmissive",
        "right_bc_type": "transmissive"
    },
    "eos_parameters": {
        "type": "ideal_gas",
        "gamma": 1.4
    },
    "output_control": {
        "save_results": true,
        "plot_results": true,
        "plot_against_analytical_0.2s": true,
        "create_animation": false 
    }
}
